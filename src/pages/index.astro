<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
		background: #0a0a0a;
		color: #fafafa;
	}

	body {
		min-height: 100vh;
		overflow-x: hidden;
	}

	/* Hero Section */
	.hero {
		position: relative;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 2rem;
		overflow: hidden;
	}

	.hero-bg {
		position: absolute;
		inset: 0;
		z-index: 0;
	}

	.hero-bg::after {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(
			to bottom,
			rgba(10, 10, 10, 0.3) 0%,
			rgba(10, 10, 10, 0.6) 50%,
			rgba(10, 10, 10, 1) 100%
		);
		z-index: 1;
	}

	.hero-image-placeholder {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		background:
			radial-gradient(ellipse at 30% 20%, rgba(99, 102, 241, 0.15) 0%, transparent 50%),
			radial-gradient(ellipse at 70% 60%, rgba(168, 85, 247, 0.1) 0%, transparent 50%),
			radial-gradient(ellipse at 50% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 40%),
			linear-gradient(180deg, #1a1a2e 0%, #0a0a0a 100%);
		color: #404040;
		font-size: 1rem;
	}

	.hero-content {
		position: relative;
		z-index: 2;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	h1 {
		font-size: clamp(3rem, 10vw, 5rem);
		font-weight: 700;
		letter-spacing: -0.02em;
		margin-bottom: 1rem;
	}

	h2 {
		font-size: clamp(1.5rem, 4vw, 2.25rem);
		font-weight: 600;
		letter-spacing: -0.01em;
		margin-bottom: 1rem;
	}

	.tagline {
		font-size: clamp(1.25rem, 4vw, 1.75rem);
		color: #a0a0a0;
		margin-bottom: 1.5rem;
	}

	.description {
		font-size: clamp(1rem, 3vw, 1.25rem);
		color: #707070;
		line-height: 1.6;
		margin-bottom: 2.5rem;
		max-width: 500px;
	}

	.cta {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		background: #fafafa;
		color: #0a0a0a;
		text-decoration: none;
		padding: 1rem 1.75rem;
		border-radius: 12px;
		font-size: 1rem;
		font-weight: 600;
		transition: transform 0.2s, opacity 0.2s;
	}

	.cta:hover {
		transform: scale(1.02);
		opacity: 0.9;
	}

	.apple-icon {
		width: 1.25rem;
		height: 1.25rem;
	}

	/* Feature Blocks */
	.feature-block {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		padding: 6rem 2rem;
		max-width: 1100px;
		margin: 0 auto;
	}

	.feature-block:nth-child(odd) {
		padding-left: 8%;
	}

	.feature-block:nth-child(even) {
		padding-right: 8%;
	}

	.feature-block--reverse {
		direction: rtl;
	}

	.feature-block--reverse > * {
		direction: ltr;
	}

	.feature-content {
		max-width: 420px;
	}

	.feature-block:not(.feature-block--reverse) .feature-content {
		justify-self: end;
		text-align: right;
	}

	.feature-block--reverse .feature-content {
		justify-self: start;
		text-align: left;
	}

	.feature-icon {
		width: 2.5rem;
		height: 2.5rem;
		margin-bottom: 1.25rem;
		color: #fafafa;
	}

	.feature-block:not(.feature-block--reverse) .feature-icon {
		margin-left: auto;
	}

	.feature-icon svg {
		width: 100%;
		height: 100%;
	}

	.feature-content p {
		color: #707070;
		line-height: 1.7;
		font-size: 1.1rem;
	}

	.feature-phone {
		display: flex;
		justify-content: center;
	}

	.phone-frame {
		width: 220px;
		background: linear-gradient(145deg, #2a2a2a 0%, #1a1a1a 100%);
		border-radius: 40px;
		padding: 10px;
		box-shadow:
			0 25px 50px -12px rgba(0, 0, 0, 0.6),
			0 0 0 1px rgba(255, 255, 255, 0.05);
	}

	.phone-screen {
		background: #0a0a0a;
		border-radius: 32px;
		aspect-ratio: 9 / 19.5;
		overflow: hidden;
	}

	.screenshot-placeholder {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(180deg, #1a1a1a 0%, #0f0f0f 100%);
		color: #404040;
		font-size: 0.875rem;
	}

	/* Footer */
	footer {
		padding: 6rem 2rem;
		text-align: center;
		margin-top: 4rem;
	}

	.copyright {
		margin-top: 2rem;
		color: #404040;
		font-size: 0.875rem;
	}

	/* Responsive */
	@media (max-width: 900px) {
		.feature-block {
			grid-template-columns: 1fr;
			gap: 3rem;
			padding: 5rem 2rem !important;
			text-align: center;
		}

		.feature-block--reverse {
			direction: ltr;
		}

		.feature-content {
			max-width: 500px;
			margin: 0 auto;
			justify-self: center !important;
			text-align: center !important;
		}

		.feature-icon {
			margin: 0 auto 1.25rem !important;
		}

		.feature-phone {
			order: -1;
		}

		.phone-frame {
			width: 200px;
		}
	}

	@media (max-width: 480px) {
		.feature-block {
			padding: 4rem 1.5rem !important;
		}

		.phone-frame {
			width: 180px;
		}

		h2 {
			font-size: 1.5rem;
		}

		.feature-content p {
			font-size: 1rem;
		}
	}
</style>
